{
  "name": "C++ Hybrid (Noble/GCC15)",
  "image": "ghcr.io/my-org/cpp:noble-stable-latest",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic",
      "installZsh": true
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/bun:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/opentelemetry-collector:1": {
      "config": "/workspace/.devcontainer/otel-config.yaml"
    }
  },

  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--network=host",
    "--shm-size=8g"
  ],

  "mounts": [
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },

  "postCreateCommand": "pixi run -e dev-container init-container",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "vadimcn.vscode-lldb",
        "sst.opencode",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
